<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
  <title>Yenta | Profile</title>
</head>

<body onload="displayBio(`<%= bio %>`)">

  <% include ../partials/nav-logged-in.ejs %>

  <div class="container">
    <h1>Profile</h1>
    <p class="lead">Welcome back, <%= username %></p>
    <div class="row">
      <div id="bio-div" class="col-md-8">
        <h2>Bio<button type="button" id="editBtn" class="btn btn-link text-muted" data-toggle="modal" data-target="#bio-edit-modal"><i class="fas fa-edit"></i> Edit</button></h2>
        <div id="currentBio">

        </div>
      </div>

      <div class="col-md-4">
        <h2>Games</h2>
        <% if (games.length > 0) { %>
          <div class="accordion" id="gamesAccordion">
            <% games.forEach(game => { %>
              <div class="card" id="gameCard<%= game.id %>">
                <button type="button" data-toggle="collapse" data-target="#game<%= game.id %>" aria-expanded="false" aria-controls="game<%= game.id %>" class="card-header list-group-item list-group-item-action">
                  <small class="d-flex justify-content-between align-items-center">
                    <strong><%= game.title %></strong>
                    <% if (game.matches && game.matches.length > 0) { %>
                      <span class="badge badge-pill badge-success"><%= game.matches.length %></span>
                    <% } else { %>
                      <span class="badge badge-pill badge-danger">0</span>
                    <% } %>
                  </small>
                </button>

                <div id="game<%= game.id %>" class="collapse" data-parent="#gamesAccordion">
                  <div class="card-body">
                    <button type="button" class="btn btn-danger btn-sm" onclick="removeGame(<%= game.id %>)" id="gameRemover<%= game.id %>">Remove</button>
                    <small class="text-danger" id="#resMsg<%= game.id %>"></small>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
            <p>No games added yet.</p>
        <% } %>
        <a href="/games" class="btn btn-primary mt-3">Add</a>
      </div>
    </div>

  </div>
  <% include ../partials/logout-modal.ejs %>

  <div class="modal fade" id="bio-edit-modal" tabindex="-1" role="dialog" aria-labelledby="login" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title" id="bio-edit-title">Edit Bio</h2>
        </div>
        <div class="modal-body">
          <p class="lead">Tell us about yourself!</p>
          <p><small class="text-muted">If you'd like, you can even <a href="https://www.w3schools.com/html/" target="_blank">style your bio text using HTML</a>.</small></p>

          <form>
            <div class="form-group">
              <textarea class="form-control" id="bio-editor" rows="12"></textarea>
            </div>
            <div class="form-group">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="button" class="btn btn-primary" name="saveBio" id="saveBio" value="saveBio" data-dismiss="modal">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <% include ../partials/footer.ejs %>
  <script src="/js/bio.js"></script>
  <script src="/js/games.js"></script>
</body>
</html>
