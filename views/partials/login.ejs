<!-- Modal -->
<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="login" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="login-title">Welcome Back!</h2>
      </div>
      <div class="modal-body">
        <form method="POST" action="/profile">
          <div class="form-group">
            <label for="userUsername">Username</label>
            <input type="text" class="form-control" id="userUsername" placeholder="Enter your username" name="username" required>
          </div>
          <div class="form-group">
            <label for="userPassword">Password</label>
            <input type="password" class="form-control" id="userPassword" placeholder="Type your password" name="password" required>
          </div>
          <div class="form-group">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" name="loginType" value="login">Log In</button>
          </div>
          <button type="button" class="btn btn-link" data-dismiss="modal" data-toggle="modal" data-target="#signup-modal"><small>Don't have an account?</small></button>
        </form>
      </div>
    </div>
  </div>
</div>