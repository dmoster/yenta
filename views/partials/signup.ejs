<!-- Modal -->
<div class="modal fade" id="signup-modal" tabindex="-1" role="dialog" aria-labelledby="signup" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="signup-title">New here?</h2>
      </div>
      <div class="modal-body">
        <p class="lead">Sign up below to get started.</p>

        <form method="POST" action="/profile">
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" id="username" placeholder="Choose a username" name="username" required>
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter your email" name="email" required>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Type a secure, unique password" name="password" required>
            <input type="password" class="form-control mt-2" id="password-verify" placeholder="Retype password to verify" onkeyup="comparePasswords()" required>
          </div>
          <div class="form-group">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" name="loginType" value="signup" id="signup-submit" disabled>Sign Up</button>
          </div>
          <button type="button" class="btn btn-link" data-dismiss="modal" data-toggle="modal" data-target="#login-modal"><small>Already a member?</small></button>
        </form>
      </div>
    </div>
  </div>
</div>